<h1 class="mt-4">Sửa Slide</h1>

<form action="/slides/{{slide._id}}/update" method="POST" class="mt-3">
  <div class="form-group">
    <label for="title">Tiêu đề</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      value="{{slide.title}}"
      required
    />
  </div>

  <div class="form-group">
    <label for="image">Link ảnh</label>
    <input
      type="text"
      class="form-control"
      id="image"
      name="image"
      value="{{slide.image}}"
      required
    />
  </div>

  <div class="form-group">
    <label for="description">Mô tả</label>
    <textarea
      class="form-control"
      id="description"
      name="description"
      rows="3"
    >{{slide.description}}</textarea>
  </div>

  <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
</form>
