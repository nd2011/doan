<div class="mt-4">
    <h3>Cập nhật tin tức</h3>

    <form class="mt-4" method="POST" action="/news/{{news._id}}?_method=PUT">
        <div class="form-group">
            <label for="title">Tiêu đề</label>
            <input type="text" class="form-control" value="{{news.title}}" id="title" name="title">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{news.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="content">Nội dung</label>
            <textarea class="form-control" id="content" name="content">{{news.content}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{news.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="author">Tác giả</label>
            <input type="text" class="form-control" value="{{news.author}}" id="author" name="author">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
